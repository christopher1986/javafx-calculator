<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="260.0" prefWidth="260.0" spacing="10" styleClass="layout" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sample.calculator.controllers.MainController">
    <StackPane alignment="TOP_CENTER">
        <Label fx:id="output" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxHeight="50.0" maxWidth="230.0" prefHeight="50.0" prefWidth="230.0" styleClass="screen" textAlignment="RIGHT" textOverrun="LEADING_WORD_ELLIPSIS" wrapText="true" StackPane.alignment="CENTER">
            <font>
                <Font size="18.0" />
            </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
        </Label>
    </StackPane>
    <VBox alignment="TOP_CENTER" fillWidth="false" spacing="10.0">
        <HBox spacing="10">
            <Button onAction="#onButtonClick" prefWidth="50" text="7" />
            <Button onAction="#onButtonClick" prefWidth="50" text="8" />
            <Button onAction="#onButtonClick" prefWidth="50" text="9" />
            <Button onAction="#onButtonClick" prefWidth="50" text="/" />
        </HBox>

        <HBox spacing="10">
            <Button onAction="#onButtonClick" prefWidth="50" text="4" />
            <Button onAction="#onButtonClick" prefWidth="50" text="5" />
            <Button onAction="#onButtonClick" prefWidth="50" text="6" />
            <Button onAction="#onButtonClick" prefWidth="50" text="*" />
        </HBox>

        <HBox spacing="10">
            <Button onAction="#onButtonClick" prefWidth="50" text="1" />
            <Button onAction="#onButtonClick" prefWidth="50" text="2" />
            <Button onAction="#onButtonClick" prefWidth="50" text="3" />
            <Button onAction="#onButtonClick" prefWidth="50" text="-" />
        </HBox>

        <HBox spacing="10">
            <Button onAction="#onButtonClick" prefWidth="50" text="0" />
            <Button onAction="#onButtonClick" prefWidth="50" text="." />
            <Button onAction="#onClearClick" prefWidth="50" text="C" />
            <Button onAction="#onButtonClick" prefWidth="50" text="+" />
        </HBox>

        <HBox spacing="10">
            <Button onAction="#onButtonClick" prefWidth="50" text="(" />
            <Button onAction="#onButtonClick" prefWidth="50" text=")" />
            <Button onAction="#onComputeClick" prefWidth="110" text="=" />
        </HBox>
    </VBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
